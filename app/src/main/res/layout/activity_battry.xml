<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battry"
    android:backgroundTint="#80ffffff"
    android:backgroundTintMode="src_over"
    tools:context=".Battry">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#80FFFFFF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TypeofAccedent"
                        style="@style/parent"
                        android:layout_height="81dp"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/accedent"
                                android:layout_width="182dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Type of Battery"
                                android:textColor="@color/colorPrimaryDark" />

                            <Spinner
                                android:id="@+id/spinner12"
                                android:layout_width="225dp"
                                android:layout_height="34dp"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/injurey"
                        style="@style/parent"
                        android:layout_height="81dp"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/injury"
                                android:layout_width="182dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Car Name"
                                android:textColor="@color/colorPrimaryDark" />

                            <EditText
                                android:id="@+id/injur"
                                style="@style/modifiedEditText"
                                android:layout_width="208dp"
                                android:hint=" Name of car"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInp"
                        style="@style/parent"
                        android:layout_height="81dp"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/te"
                                android:layout_width="182dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Bettery Size"
                                android:textColor="@color/colorPrimaryDark" />

                            <EditText
                                android:id="@+id/edxtName"
                                style="@style/modifiedEditText"
                                android:layout_width="198dp"
                                android:hint="e.g. 112A or 900A"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textIame"
                        style="@style/parent"
                        android:layout_height="81dp"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/teiew"
                                android:layout_width="182dp"
                                android:layout_height="32dp"
                                android:layout_weight="1"
                                android:text="Do you have jumper cables?"
                                android:textColor="@color/colorPrimaryDark" />

                            <Spinner
                                android:id="@+id/spinner32"
                                android:layout_width="158dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputName"
                        style="@style/parent"
                        android:layout_height="129dp"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="182dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="More Info if possable"
                                android:textColor="@color/colorPrimaryDark" />

                            <EditText
                                android:id="@+id/editTextTextMultiLine"
                                android:layout_width="match_parent"
                                android:layout_height="82dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:gravity="start|top"
                                android:hint="Discription of what happened."
                                android:inputType="textMultiLine" />

                        </LinearLayout>

                    </com.google.android.material.textfield.TextInputLayout>


                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/cirRegisterButton"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:text="Submit"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_facebook"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_google_plus"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_side_bg" />


</RelativeLayout>